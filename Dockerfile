FROM python:3.11-slim
WORKDIR /app

# Install basic deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ ./src/
COPY models/ ./models/

# Allow overriding port at runtime via the PORT env var
ENV FLASK_APP=src/app.py
ENV PORT=5000
EXPOSE 5000

# Use gunicorn in production; allow PORT override via env var
CMD ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:${PORT:-5000} src.app:app"]
